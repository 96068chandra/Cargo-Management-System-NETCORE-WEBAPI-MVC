<div class="container-fluid">
    <div class="row">
        <div class="col-2 bg-light d-flex flex-row flex-wrap">
            <div class="flex" id="list-items">
                <button onclick="show_hide() class = " button"></button>

                <ul>
                    <li><a asp-controller="Admin" asp-action="SearchEmpByName">Employee</a></li>
                    <li><a asp-controller="Admin" asp-action="SearchCusByName">Customers</a></li>
                    <li><a asp-controller="CargoTypes" asp-action="Index">Cargo Types</a></li>

                    <li><a asp-controller="City" asp-action="Index">City</a></li>

                </ul>

            </div>
        </div>

        <div class="col-9">
            <div class="card-deck mb-3 mt-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.YetToDeliverOrder</h5>
                        <p class="card-text">Yet to Deliver of Total Orders:@ViewBag.OrderCount </p>
                    </div>
                </div>
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">@ViewBag.PendingApproval</h5>
                        <p class="card-text">Yet to Approve of Total Employees:@ViewBag.TotalEmployee</p>
                    </div>
                </div>
            </div>

            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>

                        <th>
                            Order Date
                        </th>
                        <th>
                            OrderId
                        </th>
                        <th>
                            Receiver Name
                        </th>
                        <th>
                            Receiver Email
                        </th>
                        <th>
                            Receiver Phone
                        </th>
                        <th>
                            Is Order Accpeted
                        </th>
                        <th>
                            Cargo Status
                        </th>
                        <th>
                            City Id
                        </th>
                        <th>
                            Weight
                        </th>
                        <th>
                            Price
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReceiverName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReceiverEmail)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReceiverPhoneNo)
                            </td>
                            <td>
                                @if (item.IsAccepted)
                                {
                                    <text>Accepted</text>
                                }
                                else
                                {
                                    <text>Yet To Accepted</text>
                                }
                            </td>
                            <td>
                                @if (item.CargoStatusId == 1)
                                {
                                    <text>PENDING</text>
                                }
                                else if (item.CargoStatusId == 2)
                                {
                                    <text>DELIVERED</text>
                                }
                                else if (item.CargoStatusId == 3)
                                {
                                    <text>REJECTED</text>
                                }
                                else if (item.CargoStatusId == 4)
                                {
                                    <text>RETURNED</text>
                                }
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.CityId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Weight)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>

                                <a asp-action="Edit" asp-controller="CargoOrders" asp-route-id=@item.Id class="btn btn-primary ">Edit </a>

                                <a asp-action="EmpDetails" asp-controller="CargoOrders" asp-route-id=@item.Id class="btn btn-primary ">Details</a>


                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Dashboard" asp-action="Admin">Back to Dashboard</a>
</div>




