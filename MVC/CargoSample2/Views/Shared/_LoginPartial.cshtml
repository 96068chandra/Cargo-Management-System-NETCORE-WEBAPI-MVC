{

    <ul class="navbar-nav ms-auto">
        <li class="nav-item">
            <a asp-controller="" asp-action="" class="nav-link">Welcome,</a>
        </li>
        <li class="nav-item">
            <form asp-controller="Admin" asp-action="LogOut" method="post">
                <input type="submit" class=" btn btn-link nav-link" value="Sign Out" />
